<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/popup_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="8dp" />

    <Spinner
        android:id="@+id/popup_voice_select_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/popup_voice_select_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/popup_voice_select_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/popup_speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🗣️"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/popup_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⏹️"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/popup_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close"
        android:layout_marginTop="8dp" />

</LinearLayout>