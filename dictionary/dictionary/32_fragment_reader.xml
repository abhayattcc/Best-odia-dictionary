<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdf_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reader_voice_select_1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reader_voice_select_1" />

    <EditText
        android:id="@+id/text_edit_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reader_voice_select_1" />

    <Spinner
        android:id="@+id/reader_voice_select_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/file_upload_reader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reader_voice_select_2"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/reader_voice_select_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/file_upload_reader"
        app:layout_constraintStart_toEndOf="@id/reader_voice_select_1"
        app:layout_constraintEnd_toStartOf="@id/reader_voice_select_3"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/reader_voice_select_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/file_upload_reader"
        app:layout_constraintStart_toEndOf="@id/reader_voice_select_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/file_upload_reader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_file"
        app:layout_constraintBottom_toTopOf="@id/text_edit_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/text_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✏️"
        app:layout_constraintBottom_toTopOf="@id/play_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🗣️"
        app:layout_constraintBottom_toTopOf="@id/export_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⏹️"
        app:layout_constraintBottom_toTopOf="@id/export_btn"
        app:layout_constraintStart_toEndOf="@id/play_btn"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/export_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/export_text"
        app:layout_constraintBottom_toTopOf="@id/close_reader"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/close_reader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_reader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>